<% layout('layouts/boilerplate')%>

<di class="row">
    <div class="col-3" ">

    </div>
    <div class="col-6" >
        <div class="row" style="text-align:center; margin-bottom: 50px; height: 100px; width: 100%;">
            <div style="margin-top:20px ; margin-left: 12px;">
                <h1>Search Best Collage For you</h1>
            </div>
            <form action="/posts/searchPost" method="POST">
                <div class="input-group">
                    <input class="form-control" type="text" id="title" name="post[title]">
                    <button class="btn btn-success">Search</button>
                </div>
        </form>
        </div>
        <% for (let iter of post){%>
            <%let s=" ";%> 
            <% for(let i=0;i<iter.description.length && i<100;i++) {%> 
                <% s+=iter.description[i];%> 
        <% } %> 
        <% s+=".............." %> 
        <div class="card mb-3" style="display: flex; align-items: center; justify-content: center; width: 100%; background-color: aquamarine; ">
            <div class="row" style="width:100%; height:10% ;">
                <div class="col-md-4" style="margin-top:5% ; margin-bottom:5% ;">
                    <img class="img-fluid" alt="" src="<%=iter.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= iter.title %> </h5>
                        <div>
                            <p class="card-text" ><%= s %></p>
                        </div>
                        
                        <p class="card-text">
                            <small class="text-muted"><%= iter.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/posts/<%=iter._id%>">View Details Of <%=iter.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
    
    </div>
    <div class="col-3">
    
    </div>
</di>